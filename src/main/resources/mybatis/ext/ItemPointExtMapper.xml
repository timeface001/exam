<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fs.ntes.domain.ext.ItemPointExtMapper">

    <select id="selectList" parameterType="java.util.Map"
            resultMap="com.fs.ntes.domain.mapper.ItemPointMapper.BaseResultMap">
        select
        <include refid="com.fs.ntes.domain.mapper.ItemPointMapper.Base_Column_List"/>
        from item_point a
        <where>
            a.item_id=#{itemId} AND a.status=0
        </where>
    </select>

    <update id="delById" parameterType="java.util.Map">
        UPDATE item_point SET status=1 WHERE id=#{id}
    </update>
</mapper>